.layout-atlas {
    $sidebar-width: 60px;
    @media (min-width: $screen-sm) {
        .mx-layoutcontainer:not(.mx-scrollcontainer-open) .region-sidebar {
            width: $sidebar-width !important;

            .mx-navigationtree ul li {
                &.mx-navigationtree-has-items:hover {
                    ul {
                        display: block;
                        position: absolute;
                        left: 60px;
                        z-index: 100;
                        margin-top: -60px;
                    }
                }
                &.mx-navigationtree-collapsed,
                &.mx-navigationtree-has-items {
                    ul {
                        display: none;
                    }
                }
            }
        }
    }
    // Push aside for mobile
    @media (max-width: $screen-xs-max) {
        .mx-scrollcontainer-open {
            width: 1100px;
        }
    }
    .region-sidebar {
        background-color: $navsidebar-bg;
        .toggle-btn {
            width: $sidebar-width;
            border-radius: 0;
            height: 60px;
            background: transparent !important;
        }
        .mx-navigationtree {
            ul li {
                a {
                    span:first-child {
                        width: 40px;
                        height: 40px;
                        margin-left: -5px;
                        margin-right: 10px;
                        padding: 10px;
                        border-radius: 3px;
                    }
                    &.active {
                        span:first-child {
                            background: $brand-warning;
                        }
                    }
                }
            }
        }
    }
    .region-topbar {
        min-height: $topbar-minimalheight;
        border-bottom: 1px solid $navtopbar-border-color;
        background-color: $navtopbar-bg;
        box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.14);
        z-index: 1; // Show dropshadow
        position: relative;
        &:before {
            content: "";
            position: absolute;
            top: 0;
            height: 5px;
            width: 100%;
            display: block;
            background-color: $brand-primary;
        }

        .toggle-btn {
            display: none;
            @media (max-width: $screen-xs-max) {
                margin-right: 15px;
                padding: 5px;
                display: inline-block;
            }
        }

        // For your company, product, or project name
        .navbar-brand {
            display: inline-block;
            min-height: $topbar-minimalheight;
            float: none;
            padding: 0;
            line-height: $topbar-minimalheight;
            img {
                display: inline-block;
                @if $brand-logo !=false {
                    width: 0;
                    height: 0;
                    background-image: url($brand-logo);
                    background-size: $brand-logo-width;
                    background-position: left center;
                    background-repeat: no-repeat;
                    padding: $brand-logo-width / 2;
                } @else {
                    height: $brand-logo-height;
                    width: auto;
                }
            }
            a {
                font-size: 20px;
                color: $navbar-brand-name;
                margin-left: 5px;
                &:hover,
                &:focus {
                    text-decoration: none;
                }
            }
        }
        .mx-navbar {
            float: right;
            min-height: $topbar-minimalheight;
            background: transparent;
            .mx-navbar-item {
                a {
                    padding: 0 20px;
                    line-height: $topbar-minimalheight - 5;
                    margin-top: 5px;
                }
            }
        }
    }
}
