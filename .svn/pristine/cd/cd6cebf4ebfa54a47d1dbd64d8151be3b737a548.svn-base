// Timeline
.timeline {
    .timeline-header {
        display: inline-block;
        width: 110px;
        text-align: center;
        border: 1px solid $border-color-default;
        border-radius: 30px;
        padding: 8px;
    }
}
.timeline-itemwrapper.mx-listview {
    border-left: 1px solid $border-color-default;
    margin-left: 55px;
    margin-bottom: 0;
    padding: 30px 0;
    .mx-listview-item {
        position: relative;
        padding-left: 30px;

        &:before {
            content: "";
            display: block;
            position: absolute;
            left: -5px;
            top: 5px;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background-color: $brand-primary;
        }
    }
    .mx-listview-item + .mx-listview-item {
        margin-top: 30px;
    }
}
