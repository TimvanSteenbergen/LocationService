/* ==========================================================================
   Card
========================================================================== */

//== Default
//-------------------------------------------------------------------------------------------------------------------//
.card {
    background-color: #fff;
    border: 1px solid $border-color-default;
    border-radius: $border-radius-default;
    @include default-spacing($type: padding, $direction: all, $device: responsive);
    .mx-layoutgrid {
        padding: 0 !important;
    }

    //== Elements
    //-------------------------------------------------------------------------------------------------------------------//
    .card-title {
        margin-top: 0;
    }
}

//== Varations
//-------------------------------------------------------------------------------------------------------------------//
.cardaction {
    text-align: center;
    .card-image {
        margin: 0 auto 20px;
    }
    .btn {
    }
    .card-linkicon {
        margin: 0 auto 20px;
        .glyphicon {
            font-size: 58px;
        }
    }
}

.cardmetrics {
    .card-title {
        // font-size: $font-size-large; // text-large
        margin-bottom: 0;
    }
    .figurecontent {
    }
    .card-image {
        width: 100px;
        height: auto;
        // If btn
        &.btn {
            cursor: default;
            height: 100px;
            width: 100px;
            font-size: 40px;
            padding: 0;
            pointer-events: none;
        }
    }
    .card-counter {
        font-size: 64px;
        margin: 0;
    }
    .card-morebutton {
    }
}

.cardinfo {
    .card-text {
        @include default-spacing($type: margin, $direction: bottom, $device: responsive);
    }
}
// Used in card info
.textwithicon {
    max-width: 100%;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-bottom: 15px;
    .textwithicon-icon,
    .textwithicon-text {
        display: inline-block;
        vertical-align: middle;
    }
    .textwithicon-icon {
        //reset btn styling
        background: transparent;
        border: 0;
        padding: 0;

        margin-right: 15px;
        color: $brand-primary; // class .text-primary
        font-size: 23px;
    }
    .textwithicon-text {
    }
}

// Used in card info
.socialprofiles {
    .socialprofiles-title {
        font-weight: bold; // class text-bold
        margin-bottom: 10px;
        display: block;
    }
    .socialprofiles-button {
        border-radius: 24px;
        padding: 0;
        width: 24px;
        height: 24px;
        margin-right: 15px;
    }
}


.cardtabs {
    padding: 0;
    .cardtabs-tabs {
        margin: 0;
        ul.mx-tabcontainer-tabs {
            margin: 0;
            background-color: mix($tabs-border-color, #fff, 20%);
            display: flex;

            li {
                flex: 1 1 auto;
                text-align: center;
                a,
                a:hover,
                a:focus {
                    border-left-width: 0;
                    border-top-width: 0;
                    border-right-width: 1px;
                }
                &:first-child a {
                    border-radius: $border-radius-default 0 0 0;
                }
                &:last-child a {
                    border-radius: 0 $border-radius-default 0 0;
                }
            }
        }
        .mx-tabcontainer-pane {
            @include default-spacing($type: padding, $direction: all, $device: responsive);
        }
    }
}

